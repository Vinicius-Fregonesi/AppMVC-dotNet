@model AppMVC.Models.Produto
<h1>Deletar Produto</h1>


<div class="mt-3">
    <h3>Tem certeza que quer deletar?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nome</dt>
        <dd>@Model.Name</dd>
        <dt>Preço</dt>
        <dd>@Model.Price</dd>
        <dt>Descrição</dt>
        <dd>@Model.Description</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" href="../Index" value="Delete" class="btn btn-danger" /> |
        <a href="../Index">Voltar a lista de produtos</a>
    </form>
</div>
